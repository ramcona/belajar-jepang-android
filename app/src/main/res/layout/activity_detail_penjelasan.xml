<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.penjelasan.DetailPenjelasanActivity">

    <RelativeLayout
        android:background="@drawable/gradient_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/layout_toolbar"
                android:id="@+id/toolbar"/>


            <LinearLayout
                android:paddingTop="@dimen/_10sdp"
                android:background="@drawable/shape_rounded_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/dark"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:id="@+id/tv_title"
                        android:layout_marginTop="@dimen/_5sdp"
                        style="@style/headline3"
                        android:text="Siap meningkatkan kemampuan bahasa Jepangmu?"/>


                    <WebView
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:id="@+id/webview"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_marginTop="@dimen/_10sdp"
                        style="@style/medium12WithoutColor"
                        android:text="Siap meningkatkan kemampuan bahasa Jepangmu?"/>


                </LinearLayout>


                <androidx.core.widget.NestedScrollView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/nesterScroll">



                </androidx.core.widget.NestedScrollView>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>