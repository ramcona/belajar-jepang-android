<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/background_shape_white_30"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/tv_kanji"
                style="@style/medium12"
                android:text="朝御飯"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/tv_hiragana"
                style="@style/medium12"
                android:text="あかるい"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/tv_romanji"
                style="@style/body12"
                android:text="aku"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/tv_arti"
                style="@style/body12"
                android:text="untuk membuka, menjajadi terbuka"/>

        </LinearLayout>

    </LinearLayout>
</layout>